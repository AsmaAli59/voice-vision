<resources>
    <!-- Base application theme. -->
    <style name="Theme.VoiceVision" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- ______________________________________ TextInputFields ______________________________________ -->

    <style name="CustomTextInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <!-- __________________________________________ Buttons __________________________________________ -->

    <style name="CustomMaterialButton" parent="Theme.VoiceVision">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!-- _________________________________________ CardView _________________________________________ -->

    <style name="CustomMaterialCardView" parent="Theme.VoiceVision">
        <item name="cardCornerRadius">24dp</item>
    </style>

    <style name="CustomMaterialCardViewTop" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/CustomShapeOverlayCardView</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="CustomShapeOverlayCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
    </style>

    <!-- _________________________________________ TextViews _________________________________________ -->

    <style name="CustomTextViewsHome" parent="Theme.VoiceVision">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:background">@drawable/bg_round_corners_border</item>
    </style>

    <!-- _________________________________________ ImageView _________________________________________ -->

    <style name="CustomImageFilterViewRound" parent="Theme.VoiceVision">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">8dp</item>
        <item name="roundPercent">1</item>
    </style>

</resources>